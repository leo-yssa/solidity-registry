    "eslint-plugin-simple-import-sort": "^10.0.0",
    "hardhat": "^2.12.5",
    "hardhat-gas-reporter": "^1.0.9",
    "merkletreejs": "^0.3.10",
    "mocha": "^10.4.0",
    "prettier": "^2.8.4",
